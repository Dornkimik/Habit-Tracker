<Window x:Class="Habit_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Habit_Tracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <DataGrid x:Name="Habit_DataGrid" Margin="159,146,149,86" SelectionChanged="Habit_DataGrid_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding habitName}" Width="*" />
                <DataGridTextColumn Header="Is Completed" Binding="{Binding isCompleted}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="HabitInput" HorizontalAlignment="Left" Height="40" Margin="159,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="117"/>
        <Button x:Name="Save_Button" Content="Save" HorizontalAlignment="Left" Margin="364,35,0,0" VerticalAlignment="Top" Height="30" Width="53" Click="Save_Button_Click"/>
    </Grid>

</Window>
